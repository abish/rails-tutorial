<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if @user.microposts.any? %>
<p>
  <strong>Micropost:</strong>
    <% @user.microposts.each do |micropost| %>
      <li><%= micropost.content %></li>
    <% end %>
</p>
  <% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
